    <field desc="flow" name="flow" order="1" repr=" --igrass-flow #" required="true" type="rastermap"/>
    <field desc="tca" name="tca" order="2" repr=" --igrass-tca #" required="true" type="rastermap"/>
    <field desc="hacklength3d" name="hacklength3d" order="3" repr=" --ograss-hackl3d #" required="true" type="string"/>
    <i18n key="pit" en="input depitted elevation map" it="raster delle elevazioni depittato in ingresso"/>
    <i18n key="flow" en="input drainage directions map" it="mappa delle direzioni di flusso in ingresso"/>
    <i18n key="tca" en="input total contributing area map" it="mappa delle aree totali contribuenti in ingresso"/>
    <i18n key="hacklength3d" en="hack 3D distances output map" it="mappa delle lunghezze di Hack in uscita"/>
</command>