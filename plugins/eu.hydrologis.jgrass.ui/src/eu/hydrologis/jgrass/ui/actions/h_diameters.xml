<?xml version="1.0" encoding="UTF-8"?>
<command name="h.diameters" desc="Diameters">
	<field type="rastermap" required="true" name="flow" desc="input flow direction map" order="0" repr=" --igrass-flow #" />
	<exclusiveOption name="mode" required="true" order="1">
		<option name="source point only" order="1" repr=" --mode 0">
		</option>
		<option name="whole basin" order="2" repr=" --mode 1">
		</option>
	</exclusiveOption>
	<field type="string" required="true" name="diameters" desc="diameters" order="2" repr=" --ograss-diameters #" />
	<i18n key="diameters" en="output diameters map" it="mappa dei diametri in uscita"/>
</command>